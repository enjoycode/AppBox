{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "removeComments": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "es2019",
      "ESNext.WeakRef",
      "ES2017.TypedArrays",
      "dom"
    ],
    "paths": {
      "@/*": [
        "../../src/*"
      ]
    }
  }
}
