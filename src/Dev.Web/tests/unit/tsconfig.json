{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "module": "esnext",
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2019",
      "ESNext.WeakRef",
      "ES2017.TypedArrays",
      "dom"
    ]
  }
}
